<%- model_class = Album -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:artist_id) %>:</strong></dt>
  <dd><%= @album.artist.try(:name) || 'Deleted artist' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @album.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @album.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:record_condition) %>:</strong></dt>
  <dd><%= @album.condition_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:thumbnail) %>:</strong></dt>
  <dd>
    <%= image_tag(@album.thumbnail_url(:thumb).to_s, id: "img_prev") %>
  </dd>

  <dt><strong><%= 'Category' %>:</strong></dt>
  <dd><%= @album.category_name %></dd>


</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            albums_path, :class => 'btn btn-info' %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_album_path(@album), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            album_path(@album),
            :method => 'delete',
            :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
            :class => 'btn btn-danger' %>
