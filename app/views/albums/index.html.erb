<%- model_class = Album -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_album_path,
                :class => 'btn btn-primary pull-right' %>
  </h1>
  <%= link_to 'Export to CSV',
              current_url(format: :csv),
              :class => 'pull-right' %>
  <div class="clearfix"></div>
</div>

<div class="col-lg-3 well">

  <%= search_form_for @search, :html => {:class => "form-horizontal album"} do |f| %>
      <div class="form-group">
        <%= f.label :title_cont %>
        <%= f.search_field :title_cont, placeholder: 'Ex: "The Best of..", "Classics"', :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :artist_name_cont %>
        <%= f.search_field :artist_name_cont, placeholder: 'Ex: "Justin", "Boys.."', :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :condition_name, "Condition" %>
        <%= f.search_field :condition_name, placeholder: 'Ex: "New", "Good"', :class => 'form-control' %>
      </div>

      <!--<div class="form-group">
        <#%= f.label :category_name, "Genre" %>
        <#%= f.search_field :category_name, placeholder: 'Ex: "Pop", "Rock", etc', :class => 'form-control' %>
      </div> -->

      <div class="form-group">
        <%= f.submit 'Search', class: 'btn btn-info' %>
      </div>


  <% end %>

</div>
<div class="col-lg-9">


  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= sort_link @search, :id, model_class.human_attribute_name(:id) %></th>
      <th><%= sort_link @search, :artist_name, model_class.human_attribute_name(:artist_id) %></th>
      <th><%= sort_link @search, :title, model_class.human_attribute_name(:title) %></th>
      <th><%= sort_link @search, :year, model_class.human_attribute_name(:year) %></th>
      <th><%= sort_link @search, :record_condition, model_class.human_attribute_name(:record_condition) %></th>
      <th><%= model_class.human_attribute_name(:thumbnail) %></th>
      <th><%= sort_link @search, :created_at, model_class.human_attribute_name(:created_at) %></th>
      <th><%= t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @albums.each do |album| %>
      <% from_time = Time.now %>
        <tr>
          <td><%= link_to album.id, album_path(album) %></td>
          <td><%= album.artist_name %></td>
          <td><%= album.title %></td>
          <td><%= album.year %></td>
          <td><%= album.condition_name %></td>
          <td><img src="<%= album.thumbnail %>" style="max-width: 50px;"/></td>
          <td><%= distance_of_time_in_words(from_time, album.created_at) %> ago</td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        album_path(album), :class => 'btn btn-info btn-xs' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_album_path(album), :class => 'btn btn-info btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        album_path(album),
                        :method => :delete,
                        :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @albums, :theme => 'twitter-bootstrap-3' %>
</div>
